{# displays user's info and their pokemon and the pokemon's info #}
{% extends "base.jinja" %}

{% block content %}
{% if user %}
    <h4>{{ user.username }}</h4>
    <p>(trainer since {{ user.joined }})</p>
    <p>Leaderboard score: {{ user.score }}</p>
    {% for poke in user.my_poke %}
        {% include "pokemon.jinja" %}
        <form action="{{ url_for('user.delete_pokemon', poke_id=poke.poke_id) }}" method="POST">
            <input type="submit" value="DELETE">
        </form>
    {% endfor %}
{% endif %}

{% endblock content %}