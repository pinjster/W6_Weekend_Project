{% include "base.jinja" %}

{% block content %}
<form action="{{ url_for('find.pokesearch') }}" method="POST">
    <h3>Search for pokemon by name</h3>
    {{ form.hidden_tag() }}
    {{ form.searchfield() }}
    {{ form.submit() }}
</form>
{% if poke %}
    {% include "pokemon.jinja" %}
    <form action="" method="POST">
        <input type="submit" name="{{poke.poke_id}}" value="Capture">
    </form>
{% else %}
    <h5>Pokemon does not exist</h5>
{% endif %}

{% endblock content %}